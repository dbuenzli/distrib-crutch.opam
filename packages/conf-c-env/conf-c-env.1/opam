opam-version: "2.0"
synopsis: "Make your C toolchain lookup in your opam prefix"
maintainer: "The distrib-crutch repo maintainers"
authors : "The distrib-crutch repo maintainers"
homepage: "https://github.com/dbuenzli/distrib-crutch.opam"
bug-reports: "https://github.com/dbuenzli/distrib-crutch/issues"
setenv:
[[PKG_CONFIG_PATH =+ "%{lib}%/pkgconfig" ]
 [LIBRARY_PATH =+ "%{lib}%"]
 [C_INCLUDE_PATH =+ "%{prefix}%/include" ]]

description:"\
This package configures pkg-config and your C toolchain to lookup
in your opam switch too."
